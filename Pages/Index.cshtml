@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kiafrica LLC - Consulting & Insurance</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Custom styles to match the reference site's typography */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #ffffff;
        }
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Libre Baskerville', serif;
        }

       .hero-bg {
            background-image: url('../images/background.jpg');
            background-size: cover;
            background-position: center;
        }
        .hero-bg1 {
            background-image: url('../images/background1.png');
            background-size: cover;
            background-position: center;
        }
    </style>
</head>
<body>

    <main>
       <!-- Hero Section -->
        <section id="home" class="hero-bg text-white">
            <div class="bg-black bg-opacity-50 min-h-[70vh] flex items-center">
            </div>
        </section>
        <section id="home" class="hero-bg1 text-white" style="margin-top:-10%"> 
            <div class="bg-opacity-50 min-h-[70vh] flex items-center">  
                <div class="container mx-auto px-6 text-center md:text-left" style="margin-top: -8%;">
                    <!-- <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-4" >Protecting Your Future.<br>Empowering Your Peace of Mind.</h1> -->
                    <!-- <p class="text-lg md:text-xl mb-8 max-w-2xl">Welcome to Kiafrica LLC - your trusted partner in building a secure financial future for you and your loved ones.</p> -->
                    <a href="#contact" class="bg-blue-600 text-white font-bold text-lg px-10 py-4 rounded-lg hover:bg-blue-700 transition-colors">Book a Consultation</a>
                </div>        
                <!-- <img src="../images/background1.png" style="width:100%;height:100%; margin-top: -10%;"> -->
            </div>
        </section>

        <!-- All That We Do Section -->
        <section id="what-we-do" class="py-20 bg-white">
            <div class="container mx-auto px-6">
                <div class="text-center mb-12">
                    <h2 class="text-4xl font-bold text-gray-800">ALL THAT WE DO</h2>
                </div>
                <div class="grid md:grid-cols-3 gap-12">
                    <!-- Mission -->
                    <div class="text-center">
                        <h3 class="text-2xl font-bold text-gray-800 mb-4">Our Mission</h3>
                        <p class="text-gray-600 leading-relaxed">At Kiafrica LLC, our mission is to provide trusted life insurance and business consulting services that empower individuals, families, and businesses to plan confidently for the future. We are dedicated to helping our clients protect what matters most, achieve their financial goals, and build lasting legacies with integrity and expert guidance.</p>
                    </div>
                    <!-- Team -->
                    <div class="text-center">
                        <h3 class="text-2xl font-bold text-gray-800 mb-4">Our Team</h3>
                        <p class="text-gray-600 leading-relaxed">At Kiafrica LLC, our team is made up of experienced and licensed life insurance professionals who are passionate about protecting what matters most—your life, your family, and your future. With deep industry knowledge and a heart for service, we guide our clients through tailored insurance solutions with clarity, care, and confidence. Every member of our team is dedicated to helping you make informed decisions and build a secure financial legacy.</p>
                    </div>
                    <!-- Approach -->
                    <div class="text-center">
                        <h3 class="text-2xl font-bold text-gray-800 mb-4">Our Approach</h3>
                        <p class="text-gray-600 leading-relaxed">At Kiafrica LLC, we offer personalized insurance solutions—from life and health coverage to retirement planning. We take time to understand your unique needs and guide you with clear, trusted advice to protect your future and give you peace of mind.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services Section -->
        <section id="services" class="py-20 bg-gray-50">
            <div class="container mx-auto px-6">
                <div class="text-center mb-12">
                    <h2 class="text-4xl font-bold text-gray-800">Our Services</h2>                
                    <p class="text-gray-600 mt-2"></p>

                </div>
                <div class="grid md:grid-cols-5 gap-8">
                    <!-- Service 1: HR Consulting -->
                    <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">Term and Whole Life Insurance.</h3>
                        <p class="text-gray-600">Protect your loved ones with flexible life insurance options — choose term for affordable coverage or whole life for lifelong protection with cash value benefits.</p>
                    </div>

                    <!-- Service 21: HR Consulting -->
                    <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">Index Universal Life (IUL)</h3>
                        <p class="text-gray-600">A smart life insurance solution that combines lifelong protection with the potential to grow cash value based on stock market index performance — with no direct investment risk.</p>
                    </div>
                    <!-- Service 3: Insurance -->
                    <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">College Planning Solutions</h3>
                        <p class="text-gray-600">Strategically plan and save for your child’s education with customized tools that reduce debt and maximize financial aid opportunities.</p>
                    </div>
                    <!-- Service 4: Coaching -->
                    <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">Annuities</h3>
                        <p class="text-gray-600">Secure a guaranteed stream of income during retirement with annuity options tailored to meet your long-term financial goals and risk comfort.</p>
                    </div>

                     <!-- Service 5: Coaching -->
                    <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                        <h3 class="text-2xl font-bold text-gray-800 mb-3">Final Expense Coverage</h3>
                        <p class="text-gray-600">Ensure peace of mind for your family by covering funeral and burial costs with a simple, affordable insurance policy designed to relieve financial stress.</p>
                    </div>
                </div>
            </div>
        </section>

       <!-- About Section -->
        <section id="about" class="py-20 bg-gray-50">
            <div class="container mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
                <div>
                    <div class="carousel">
                        <div class="carousel-images">
                        <img src="/images/maggie1.jpg" alt="About Image 1" />
                        <img src="/images/maggie2.jpg" alt="About Image 2" />
                        <img src="/images/maggie3.jpg" alt="About Image 3" />
                        <img src="/images/maggie4.jpg" alt="About Image 4" />
                        <img src="/images/maggie5.jpg" alt="About Image 5" />
                        <img src="/images/maggie6.jpg" alt="About Image 6" />
                        <img src="/images/maggie7.jpg" alt="About Image 7" />
                        <img src="/images/maggie8.jpg" alt="About Image 8" />
                        <img src="/images/maggie9_1.jpg" alt="About Image 9" />
                        <img src="/images/maggie10.jpg" alt="About Image 10" />
                        <img src="/images/maggie11.jpg" alt="About Image 11" />
                        <img src="/images/maggie12.jpg" alt="About Image 11" class="active" />
                        </div>
                        <button class="prev" onclick="prevSlide()">❮</button>
                        <button class="next" onclick="nextSlide()">❯</button>
                    </div>
                    @* <img src='../images/maggie9_1.jpg' alt="Portrait of Maggie Mwirigi" class="rounded-lg shadow-2xl w-full"> *@
                </div>
                <div>
                    <h2 class="text-4xl font-bold text-gray-800 mb-6">About Maggie Mwirigi</h2>
                    <p class="text-gray-600 mb-4 leading-relaxed">
                        My name is Maggie, and I’m a multifaceted professional with a heart for service and a mission to empower. I began my career in Kenya as an Administrative Assistant, and in 2011, I migrated to the U.S. with my family in pursuit of greater opportunity. I became a licensed Nurse in 2014, dedicating years to caring for medically fragile children.
                    </p>
                    <p class="text-gray-600 mb-4 leading-relaxed">
                        In 2020, I transitioned into the world of data, becoming a Data Integration Engineer in the healthcare space. My career has spanned across the healthcare, transportation, and government sectors—giving me a unique lens into systems, operations, and impact.
                    </p>
                    <p class="text-gray-600 mb-6 leading-relaxed">
                        Beyond my 9–5, I’m also a serial entrepreneur with businesses in real estate, e-commerce, and financial services. My passion lies in helping women build financial independence and generational wealth. As a licensed Financial Professional, I specialize in life and health insurance, including:                     
                    </p>

                    <ul style="list-style-type:disc; padding:20px">
                        <li>Term and Whole Life Insurance</li>
                        <li>Index Universal Life (IUL)</li>
                        <li>College Planning Solutions</li>
                        <li>Annuities</li>
                        <li>Final Expense Coverage</li>
                    </ul>

                    <p class="text-gray-600 mb-6 leading-relaxed">
                        My mission is simple but powerful: to help families break the cycle of financial insecurity. I educate my community to move beyond “WhatsApp group fundraisers” and embrace real protection and planning for their futures.                      
                    </p>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact" class="py-16 md:py-24 bg-white">
            <div class="container mx-auto px-4">
                <h2 class="text-4xl font-bold text-center mb-12 text-gray-900 font-archivo-black">Contact Us</h2>
                <div class="max-w-2xl mx-auto bg-gray-50 p-8 rounded-lg card-shadow">
                    <p class="text-center text-lg mb-8 text-gray-700">Have questions or need assistance? Fill out the form below and we'll get back to you shortly.</p>
                    @if (!string.IsNullOrEmpty(Model.ResultMessage))
                    {
                        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
                            @Model.ResultMessage
                        </div>
                    }

                    <form class="space-y-6" method="post">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                            <input type="text" id="name" name="name" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Your Name" required>
                        </div>
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            <input type="email" id="email" name="email" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="your.email@example.com" required>
                        </div>
                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone (Optional)</label>
                            <input type="tel" id="phone" name="phone" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="+254 7XX XXX XXX">
                        </div>
                        <div>
                            <label for="ServiceItem" class="block text-sm font-medium text-gray-700 mb-1">Interested Service</label>
                            <select  id="ServiceItem" name="ServiceItem" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                <option value="">Select a Service</option>
                                <option value="TWLI">Term and Whole Life Insurance</option>
                                <option value="IUL">Index Universal Life (IUL)</option>
                                <option value="CPS">College Planning Solutions</option>
                                <option value="Annu">Annuities</option>
                                <option value="FEC">Final Expense Coverage</option>                                
                                <option value="other">Other</option>
                            </select>
                        </div>
                        <div>
                            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                            <textarea id="message" name="message" rows="5" class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Tell us how we can help you..." required></textarea>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full md:w-auto">
                                Send Message
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <!-- Contact Section -->
        @* <section id="contact" class="py-20 bg-gray-50">
            <div class="container mx-auto px-6 text-center">
                <h2 class="text-4xl font-bold text-gray-800 mb-4">Ready to Take the Next Step?</h2>
                <p class="text-gray-600 mb-8 max-w-2xl mx-auto">Contact us today for a free, no-obligation quote or to schedule a consultation. We're here to help you find the perfect solution for your needs.</p>
                <a href="mailto:info@kiafricainsurance.com" class="bg-blue-600 text-white font-bold text-lg px-10 py-4 rounded-lg hover:bg-blue-700 transition-colors">Get in Touch</a>
            </div>
        </section> *@
    </main>

    <script>
        // JavaScript for mobile menu toggle
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>

</body>
</html>
